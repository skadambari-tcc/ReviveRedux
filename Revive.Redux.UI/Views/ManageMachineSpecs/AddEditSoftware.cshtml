@model Revive.Redux.Entities.ManageSoftwareVersionModel
@using Kendo.Mvc.UI
@using System.Web.Optimization
@{
    ViewBag.Title = "Add Edit Software";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



