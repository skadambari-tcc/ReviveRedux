        height: 48px;
    }

        .k-upload-sync > .k-upload-files {
            width: 65%;
        }

    .contant_sector {
        min-height: 300px !important;
        height: auto;
    }

    .k-tooltip {
        -webkit-box-shadow: none;
        box-shadow: none;
    }

    .k-widget.k-tooltip {
