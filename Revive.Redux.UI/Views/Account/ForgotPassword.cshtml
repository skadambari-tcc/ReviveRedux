@model Revive.Redux.UI.ForgotPasswordViewModel
@{
    ViewBag.Title = "Forgot Password";

}

@using (Html.BeginForm("ForgotPassword", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()

    <div class="Title">
        <p><h2>FORGOT PASSWORD</h2></p>
    </div>
    <br />
    <div class="">
        <div class="form-group">
            @Html.Label("Provide your email:", new { @class = "col-md-2 control-label required" })
            <div class="col-md-3 col-sm-10">
                @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                <span class="field-validation-error">@Html.ValidationMessageFor(m => m.Email)</span>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" class="btn btn-default GreenBtn" value="Submit" />
                <input type="button" class="btn btn-default YellowBtn" onclick="location.href='@Url.Action("Index", "Home")'" value="Cancel" />
            </div>
        </div>
    </div>
}
<script type="text/javascript">
        @if (TempData["isForgotPwdSuccess"] != null && (bool)TempData["isForgotPwdSuccess"] == true)
        {
            <text>toastr.success('Password has been successfully sent to the email address you provided.');</text>
        }
</script>
<style type="text/css">
    #loginDiv {
        box-shadow: 0 4px 20px -4px black;
        margin: 50px auto 0;
        padding: 20px;
        background-color: white;
        border-top-left-radius: 5px;
        border-top-right-radius: 5px;
        border-bottom-left-radius: 5px;
        border-bottom-right-radius: 5px;
    }

    .headerlabel {
        color: #113b96;
        font: bold 24px Ubuntu,Arial,Helvetica;
    }


    #Tabs {
        visibility: hidden;
    }

    #logout {
        visibility: hidden;
    }

    .navbar-toggle {
        visibility: hidden;
    }
</style>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
