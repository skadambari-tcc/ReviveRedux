@using Kendo.Mvc.UI
@using Revive.Redux.Entities;
@model FAQModel
@{
    ViewBag.Title = "View FAQs";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    #body {
        /*height: 550px;*/
    }

    .k-grid-content {
        overflow-y: auto;
        max-height: 410px;
        overflow-x: auto;
    }

    .Title {
        text-align: left;
        font-size: larger;
        color: #7c0000;
    }

    .k-grid tbody tr:hover {
        background: #faecc1;
    }

    .k-window div.k-window-content {
        overflow-x: hidden !important;
    }

    .k-window-titlebar {
        height: 30px;
    }

    .wordwrap {
        word-wrap: break-word;
    }

    .k-grid table {
        table-layout: fixed;
    }

    .k-grid td {
        white-space: nowrap;
        text-overflow: ellipsis;
    }
    .contant_page h4 {
        
        margin: 0 0 15px 0;
    }
    #accordion{
        margin-left:2%;
    }
    .accordion-toggle {
        cursor: pointer;
        margin: 0;
    }
    .accordion-toggle span{
        color: #0e77b9;
    }
    .accordion-toggle span:hover, .accordion-toggle span:focus, .accordion-toggle span:active{
        color:darkblue;

    }
    .accordion-content {
        display: none;
        padding-bottom:10px;
        margin-left: 4%;
        width: 90%;
    }
        .accordion-content.default {
            display: block;
        }
    .showFAQ {
        background-image: url('../../Scripts/images/showFAQ.png');
        float: left;
        display: inline;
        margin-right: 1em;
        width: 17px;
        height: 18px;
    }
    .hideFAQ {
        background-image: url('../../Scripts/images/hideFAQ.png');
        float: left;
        display: inline;
        margin-right: 1em;
        width: 17px;
        height: 18px;
    }
</style>
<script src="~/Scripts/knockout-3.2.0.js"></script>
<div class="modal-body" >
    <div class="row">
        <div class="col-md-12">
            <div class=" contant_page">
                <div class="row">
                    <div class="lable-align-top">
                        <h2>Frequently asked questions</h2>
                    </div>
                    <div class="row" data-bind="visible: faqList().length > 0">
                        <div id="accordion">
                            <div data-bind="foreach: faqList">
                                <h4 class="accordion-toggle"><i class="showFAQ"></i><span data-bind="text: Question"></span></h4>
                                <div class="accordion-content">
                                    <p><span data-bind="text: Answer"></span></p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script type="text/javascript">
    $(document).ready(function () {
        Revive.Redux.Common.SetParentMenuSelected('KnowledgeCenter');
        $(".k-overlay").hide();
        $(".k-window").hide();

        var FAQsModel = function () {
            var self = this;
            self.faqList = ko.observableArray();
            self.FAQs = function () {
                $.ajax({
                    type: 'POST',
                    url: '@Url.Action("/GetFAQsAjax")', // Calling json method
                    dataType: 'json',
                    data: '',
                    success: function (obj) {
                        if (obj.length > 0) {
                            $.each(obj, function (i, current) {
                                self.faqList.push(current);
                            });
                            self.RegisterToggle();
                        }
                    },
                    error: function (ex) {
                        $.alert({ content: 'Failed to retrieve FAQs. ' + ex, confirm: function () { } });
                    }
                });
            };
            self.RegisterToggle = function () {
                $('#accordion').find('.accordion-toggle').click(function () {
                    //Expand or collapse this panel
                    $(this).next().slideToggle('fast');
                    //set class
                    if($(this).find('i').attr('class')=='showFAQ')
                        $(this).find('i').attr('class', 'hideFAQ');
                    else
                        $(this).find('i').attr('class', 'showFAQ');
                    //Hide the other panels
                    $(".accordion-content").not($(this).next()).slideUp('fast');
                    $(".accordion-toggle").not($(this)).find('i').attr('class', 'showFAQ');
                });
            };
            self.FAQs();
        };
        ko.applyBindings(new FAQsModel());
    });

</script>
